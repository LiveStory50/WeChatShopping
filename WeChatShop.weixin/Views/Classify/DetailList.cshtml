    Layout = null;
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=no">
    <meta name="description" content="Free Web tutorials">
    <meta name="keywords" content="HTML,CSS,JavaScript">
    <meta content="telephone=no" name="format-detection">
    <title>友意健康</title>
    <link href="/Contents/css/Cbase.css" type="text/css" rel="stylesheet">
    <link href="/Contents/css/index.css" type="text/css" rel="stylesheet">
    <link href="/Contents/css/swiper.min.css" type="text/css" rel="stylesheet">
    <script src="/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
    <script src="/Scripts/base.js" type="text/javascript"></script>
    <script src="/Scripts/swiper.min.js" type="text/javascript"></script>
    <script src="/Scripts/index.js" type="text/javascript"></script>
</head>

<body>
    <!--ftop开始-->
    <div class="ftop">
        <div class="index_search index_search01">
            <a class="back" onClick="javascript:history.back(-1);"><img src="/Contents/images/icon_03.png"></a>
            <div>
                <input type="text" placeholder="请输入您要搜索的产品">
                <input class="dw" onclick="document.location='search_list.html'" type="button" value=" ">
            </div>
        </div>
        <div style="clear: both;"></div>
    </div>
<!--ftop开始-->
<style>
    ul,li{ list-style: none}
    .tabClick{ background: #f3f3f3; overflow: hidden}
    .tabClick a{background-color: #FFFFFF; height:40px; line-height: 40px; width: 33.3333333%; float: left; text-align: center}
    .tabClick a.active{ color: #000000; transition: 0.1s; }
    .tabCon{ overflow: hidden}
    .tabBox{ position: relative}
    .tabList{word-break: break-all; width:100%;float:left; line-height:100px; text-align:center; color:#D3D3D3; font-size:36px; font-family: "Arial Black"}
    .lineBorder a{ height: 2px; overflow: hidden; border-bottom:1px solid #099; background: #f3f3f3}
    .lineDiv {background: #000000; height: 2px;margin-left: 13%; width: 7%;}
</style>
    <script src="~/Scripts/tab_jq.js"></script>
<div class="search_list">
    <div class="wrap" id="wrap">
        <ul class="tabClick">
            <a class="active"><span>综合</span></a>
            <a><span>销量</span></a>
            <a><span>评价</span></a>

        </ul>
        <div class="lineBorder">
            <div class="lineDiv"><!--移动的div--></div>
        </div>
        <div class="tabCon">
            <div class="tabBox">
                <div class="tabList">
                    <ul>
                        <!--查询该子类下的综合产品-->
                        @foreach (var product in Model.Products)
                        {

                            <li>
                                <a href="@Url.Action("Detail", "Classify", new {procode = product.Code})">
                                    <img src="/Contents/images/@product.ProPhotoes.FirstOrDefault(p => p.ProCode == product.Code).ImgUrl">
                                    <div class="search_item">
                                        <p>@product.Name</p>
                                        <h2>
                                            <i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span>
                                        </h2>
                                    </div>
                                </a>
                            </li>

                        }
                    </ul>

                </div>
                <div class="tabList">
                    <ul>
                        <!--查询该子类下的分类产品以No的值分类 销量 No== -->
                        @foreach (var product in Model.Products)
                        {
                            if (product.ProPhotoes.FirstOrDefault(p => p.ProCode == product.Code).No == 0)
                            {
                                <li>
                                    <a href="@Url.Action("Detail", "Classify", new {procode = product.Code})">
                                        <img src="/Contents/images/@product.ProPhotoes.FirstOrDefault(p => p.ProCode == product.Code).ImgUrl">
                                        <div class="search_item">
                                            <p>@product.Name</p>
                                            <h2>
                                                <i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span>
                                            </h2>
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <div class="tabList">
                    <ul>
                        <!--查询该子类下的分类产品以No的值分类 评价 No== -->
                        @foreach (var product in Model.Products)
                        {
                            if (product.ProPhotoes.FirstOrDefault(p => p.ProCode == product.Code).No == 0)
                            {
                                <li>
                                    <a href="@Url.Action("Detail", "Classify", new {procode = product.Code})">
                                        <img src="/Contents/images/@product.ProPhotoes.FirstOrDefault(p => p.ProCode == product.Code).ImgUrl">
                                        <div class="search_item">
                                            <p>@product.Name</p>
                                            <h2>
                                                <i>￥</i><b>@product.SellPrice</b><span>月销18252笔</span>
                                            </h2>
                                        </div>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>

            </div>
        </div>

    </div>

    <ul>
     
        <!--查询该子类下的分类产品以No的值分类-->
        @*@foreach (var product in Model.Products)
        {
