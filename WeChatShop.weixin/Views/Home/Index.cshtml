@model WeChatShop.weixin.Models.ViveViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_LayoutNav.cshtml";
}

<!--ftop开始-->
<div class="ftop">
    <div class="index_search">
        <input onclick="document.location='search.html'" type="text" placeholder="请输入您要搜索的产品">

        <p>
            <a href="@Url.Action("NoticeResult","Home",new {noteresult=Model.NoticeNum})">
                <img src="/Contents/images/icon_05.png"><sup>@Model.NoticeNum</sup>
            </a>
        </p>

    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<!--banner start-->
<div class="swiper-container index_banner">
    <div class="swiper-wrapper">
        @foreach (var ban in Model.Banners)
        {
            <div class="swiper-slide">
                <a href="@ban.Link">
                    <img src="/Contents/images/@ban.Image" alt="">
                </a>
            </div>
        }
    </div>
    <div class="swiper-pagination swiper-index"></div>
</div>

<!--banner over-->
<div class="index_knowledge">
    <img src="/Contents/images/icon_0902.png">
    <div class="swiper-container dlist">
        <div class="swiper-wrapper">
            @foreach (var notice in Model.Notices)
            {
                <a class="swiper-slide" href="@Url.Action("NoticeDetail","Home",new {noticeid=notice.Id})">
                    <i>最新</i>@notice.Title
                </a>

            }
           
        </div>
    </div>
</div>

<div class="index_main">

    
    <style>
      
        ul,li{ list-style: none}
        .tabClick{ background: #f3f3f3; overflow: hidden}
        .tabClick a{background-color: #FFFFFF; height:40px; line-height: 40px; width: 50%; float: left; text-align: center}
        .tabClick a.active{ color: #000000; transition: 0.1s; }
        .tabCon{ overflow: hidden}
        .tabBox{ position: relative}
        .tabList{word-break: break-all; width:100%;float:left; line-height:100px; text-align:center; font-size:36px; }
        .lineBorder a{ height: 2px; overflow: hidden; border-bottom:1px solid #099; background: #f3f3f3}
        .lineDiv {background: #000000; height: 2px;margin-left: 21.4%; width: 7%;}
    </style>
    <script src="~/Scripts/tab_jq.js"></script>
    <div class="wrap" id="wrap">
        <p class="index_mtitle">
            <ul class="tabClick" style="background: #FFFFFF;height: 40px;">
                
              <a class="on">热销</a>

              <a class="on">推荐 </a>
               

            </ul>
        </p>
        <div class="lineBorder">
            <div class="lineDiv"><!--移动的div--></div>
        </div>
        <div class="tabCon">
            <div class="tabBox">
                <div class="tabList">
                    <ul>
                      
                        @foreach (var produc in Model.Products)
                        {
                            <li>
                                <a href="@Url.Action("NoticeDetail","Home",new {notedetail=produc.Code})">
                                    <img src="/Contents/images/@produc.ProPhotoes.FirstOrDefault(p => p.No==0).ImgUrl">
                                </a>
                                <div class="product_text">
                                    <h2 style="padding-right: 520px">
                                        <p>@produc.Intro</p>
                                        <span>
                                            @for (int i = 0; i < 4; i++)
                                            {
                                                <img src="/Contents/images/icon_06.png">
                                            }
                                            @for (int i = 0; i < 5 - 4; i++)
                                            {
                                                <img src="/Contents/images/icon_07.png">
                                            }
                        
                                        </span>
                                    </h2>
                                    <p>@produc.Detail</p>
                                    <h3>
                                        <p>
                                            <i>￥</i><b>@produc.SellPrice</b>
                                            @foreach (var tag in produc.Tags)
                                            {
                                                <span>@tag.Name</span>
                                            }
                        
                                        </p>
                                        <a href="product_xq.html">立即购买</a>
                                    </h3>
                                </div>
                            </li>

                        }

                    </ul>

                </div>
                <div class="tabList">
                    <ul>
                        @foreach (var produc in Model.Products)
                        {
                            <li>
                                <a href="@Url.Action("NoticeDetail","Home",new {notedetail=produc.Code})">
                                    <img src="/Contents/images/@produc.ProPhotoes.FirstOrDefault(p => p.No==0).ImgUrl">
                                </a>
                                <div class="product_text">
                                    <h2>
                                        <p>@produc.Intro</p>
                                        <span>
                                            @for (int i = 0; i < 4; i++)
                                            {
                                                <img src="/Contents/images/icon_06.png">
                                            }
                                            @for (int i = 0; i < 5 - 4; i++)
                                            {
                                                <img src="/Contents/images/icon_07.png">
                                            }
                        
                                        </span>
                                    </h2>
                                    <p>@produc.Detail</p>
                                    <h3>
                                        <p>
                                            <i>￥</i><b>@produc.SellPrice</b>
                                            @foreach (var tag in produc.Tags)
                                            {
                                                <span>@tag.Name</span>
                                            }
                        
                                        </p>
                                        <a href="product_xq.html">立即购买</a>
                                    </h3>
                                </div>
                            </li>

                        }
                    </ul>

                </div>


            </div>
        </div>

    </div>












    
    
    
    

    
    
    

</div>
<div class="index_icon">
    <p>
        <span><img src="/Contents/images/icon_01.png"><i>品质保证</i></span>
        <span><img src="/Contents/images/icon_02.png"><i>送货保障</i></span>
        <span><img src="/Contents/images/icon_003.png"><i>7天包换</i></span>
        <span><img src="/Contents/images/icon_04.png"><i>质量保障</i></span>
    </p>
</div>

